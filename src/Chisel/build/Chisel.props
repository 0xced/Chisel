<Project>

  <PropertyGroup>
    <ChiselEnabled Condition="$(ChiselEnabled) == ''">true</ChiselEnabled>
    <ChiselGraph Condition="$(ChiselGraph) == ''">$(MSBuildProjectName).Chisel.mermaid</ChiselGraph>
    <ChiselGraphDirection Condition="$(ChiselGraphDirection) == ''">LeftToRight</ChiselGraphDirection>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="$(IntermediateOutputPath)$(ChiselGraph)" Condition="Exists('$(IntermediateOutputPath)$(ChiselGraph)') AND $(ChiselGraphAlias) != ''">
      <Link>$(ChiselGraphAlias)</Link>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ChiselIgnores Include="NETStandard.Library" />
  </ItemGroup>

  <ItemDefinitionGroup>
    <ChiselPackages>
      <Visible>false</Visible>
    </ChiselPackages>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup>
    <ChiselIgnores>
      <Visible>false</Visible>
    </ChiselIgnores>
  </ItemDefinitionGroup>

</Project>
