<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>true</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Import Project="../../src/Chisel/build/Chisel.props" />
  <Import Project="../../src/Chisel/build/Chisel.targets" />

  <ItemGroup>
    <ProjectReference Include="../../src/Chisel/Chisel.csproj" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ByteSize" Version="2.1.2" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.1" />
    <PackageReference Include="MongoDB.Driver" Version="2.24.0" />
    <PackageReference Include="Testcontainers.MongoDb" Version="3.7.0" />
  </ItemGroup>

  <PropertyGroup>
    <ChiselPackage>AWSSDK.SecurityToken</ChiselPackage>
  </PropertyGroup>

  <PropertyGroup>
    <ChiselGraphIgnore>Testcontainers.MongoDb</ChiselGraphIgnore>
    <ChiselGraphAlias>MongoDBSample.mermaid</ChiselGraphAlias>
  </PropertyGroup>

</Project>
